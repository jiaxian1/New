<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_slidingmenu_left"
    android:id="@+id/ll_drawer_right">
    <LinearLayout
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="right"
        >
        <LinearLayout
            android:id="@+id/ll_home_include_right_login"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="40dp"
                android:id="@+id/biz_pc_main_info_profile_avatar_bg_dark"
                android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/tv_include_bottom_login_name"
                android:textColor="@color/colorWhite"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:textSize="25dp"
                android:text="立即登陆"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:background="@null"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_update_version"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:text="更新版本"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout

            android:background="@mipmap/share_little_bg"
            android:layout_width="200dp"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/iv_include_home_drawer_right_wechat"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/fun_share_weixin"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/iv_include_home_drawer_right_qq"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/addimport_qq"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/iv_include_home_drawer_right_wechat_moments"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/fun_share_friends"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/iv_include_home_drawer_right_microblog"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/fun_share_weibo"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

