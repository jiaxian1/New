<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_slidingmenu_left"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/ll_drawer_left">
    <LinearLayout
        android:id="@+id/ll_drawer_left_news"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/biz_navigation_tab_news"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/tv_drawer_left_news"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="新闻"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:layout_below="@+id/tv_drawer_left_news"
                android:text="NEWS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_drawer_left_favorite"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/biz_navigation_tab_read"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/tv_drawer_left_favority"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="收藏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:layout_below="@+id/tv_drawer_left_favority"
                android:text="FAVORITE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_drawer_left_local"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/biz_navigation_tab_local_news"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/tv_drawer_left_local"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="本地"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:layout_below="@+id/tv_drawer_left_local"
                android:text="LOCAL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_drawer_left_comment"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/biz_navigation_tab_ties"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/tv_drawer_left_comment"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="评论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:layout_below="@+id/tv_drawer_left_comment"
                android:text="COMMENT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_drawer_left_photo"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/biz_navigation_tab_pics"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/tv_drawer_left_photo"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="照片"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:layout_below="@+id/tv_drawer_left_photo"
                android:text="PHOTO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
